<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="@color/colorLightGray" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/colorPrimary" />

    <!-- Rounded Corners -->
    <corners android:radius="8dp" />

    <!-- Padding (Optional for inner spacing) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
